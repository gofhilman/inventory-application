<main>
  <form action="/new" method="post">
    <h2>New project</h2>
    <%- include("partials/errors.ejs") %>
    <p class="required">All required fields are marked with an asterisk (*)</p>
    <div>
      <label for="password">Admin password <span class="required">*</span></label>
      <input type="password" name="password" id="password" required>
      <label for="name">Project name <span class="required">*</span></label>
      <input type="text" name="name" id="name" required>
      <label for="description">Project description</label>
      <textarea name="description" id="description"></textarea>
      <label for="features">Features</label>
      <textarea name="features" id="features"></textarea>
      <label for="stack">Tech stack</label>
      <textarea name="stack" id="stack"></textarea>
      <label for="source">Source code URL</label>
      <input type="url" name="source" id="source">
      <label for="website">Website URL</label>
      <input type="url" name="website" id="website">
      <label for="image">Project image URL</label>
      <input type="url" name="image" id="image">
      <label for="category">Category</label>
      <input type="text" name="category" id="category">
      <label for="language">Language</label>
      <input type="text" name="language" id="language">
      <label for="tool">Tool</label>
      <input type="text" name="tool" id="tool">
    </div>
    <button>Submit</button>
  </form>
</main>